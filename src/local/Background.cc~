#include "Background.h"

namespace local
{
	/*explicit*/ Background::Background(const local::Heightmap& heightmap)
	:Tilemap(heightmap)
	{
	
	}

	/*virtual*/ Background::~Background()
	{

	}

	int Background::convert(float value){
	
		int tile = 1;
			if(value < -0.1)
			{
				tile = 0;
			}
			else
			{
				tile = 1;
			}

	return tile;
	}
}
